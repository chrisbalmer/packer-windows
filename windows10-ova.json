{
  "variables": {
    "DATE": null,
    "EDITION": null,
    "RELEASE": null,
    "NAME": "windows10{{ user `EDITION` }}-{{ user `RELEASE` }}-{{ user `DATE` }}",
    "OUTPUT_ROOT": "./output",
    "HEADLESS": "true"
  },
  "builders": [{
    "name": "{{ user `NAME` }}",
    "vm_name": "{{ user `NAME` }}",
    "type": "vmware-vmx",
    "headless": "{{ user `HEADLESS`}}",
    "source_path": "{{ user `OUTPUT_ROOT` }}/{{ user `NAME` }}/{{ user `NAME` }}.vmx",
    "output_directory": "{{ user `OUTPUT_ROOT` }}/{{ user `NAME` }}-ova",

    "communicator":"winrm",
    "winrm_username": "administrator",
    "winrm_password": "ansible",
    "winrm_timeout": "8h",
    "winrm_use_ntlm": true,
    "winrm_use_ssl": true,
    "winrm_insecure": true,

    "shutdown_command": "shutdown /s /t 10 /f /d p:4:1 /c \"Packer Shutdown\"",
    "shutdown_timeout": "1h"
  }],
  "provisioners": [
    {
      "type": "powershell",
      "script": "scripts/cleanup.ps1"
    }
  ],
  "post-processors": [
      [
        {
          "type": "shell-local",
          "inline": [
            "ovftool --diskMode=thin --name=\"{{ user `NAME` }}\" --annotation=\"{{ user `DATE`}}\" \"{{ user `OUTPUT_ROOT` }}/{{ user `NAME` }}-ova/{{ user `NAME` }}.vmx\" \"{{ user `OUTPUT_ROOT` }}/{{ user `NAME` }}.ova\"",
            "rm -rf \"{{ user `OUTPUT_ROOT` }}/{{ user `NAME` }}-ova/\""
          ]
        }
      ]
  ]
}
