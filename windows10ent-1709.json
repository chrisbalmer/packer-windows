{
  "variables": {
    "NAME": "windows10ent-1709-{{isotime \"2006-01-02\"}}",
    "ISO_PATH": "/home/chrisbalmer/ISO/",
    "OUTPUT_ROOT": "./output/",
    "HEADLESS": "false",
    "ISO_FILE": "SW_DVD5_Win_Pro_Ent_Edu_N_10_1709_64BIT_English_MLF_X21-50143.ISO",
    "ISO_CHECKSUM": "93f91010979387ec0b2417c94dff7a00e827990f8f40b3d5885774d68eb74bb9"
  },
  "builders": [{
    "name": "{{ user `NAME` }}",
    "vm_name": "{{ user `NAME` }}",
    "type": "vmware-iso",
    "guest_os_type": "windows9-64",
    "headless": "{{ user `HEADLESS`}}",
    "output_directory": "{{ user `OUTPUT_ROOT` }}{{ user `NAME` }}/",
    "http_directory": "http",

    "iso_url": "{{ user `ISO_PATH` }}{{ user `ISO_FILE` }}",
    "iso_checksum_type": "sha256",
    "iso_checksum": "{{ user `ISO_CHECKSUM` }}",

    "communicator":"winrm",
    "winrm_username": "administrator",
    "winrm_password": "ansible",
    "winrm_timeout": "8h",
    "winrm_timeout": "8h",
    "winrm_use_ntlm": true,
    
    "cpus": 2,
    "cores": 1,
    "memory": 4096,
    "disk_adapter_type": "lsisas1068",
    "version": "11",

    "vmx_data": {
      "hpet0.present": "TRUE",
      "gui.fitGuestUsingNativeDisplayResolution": "FALSE"
    },
    "vmx_data_post": {
      "ide1:0.startConnected": "FALSE",
      "ide1:0.clientDevice": "TRUE",
      "ethernet0.virtualDev": "vmxnet3"
    },
    "version": "11",

    "shutdown_command": "shutdown /s /t 10 /f /d p:4:1 /c \"Packer Shutdown\"",
    "shutdown_timeout": "1h",
    "floppy_files": [
      "scripts/10-enterprise/autounattend.xml",
      "scripts/microsoft-updates.bat",
      "scripts/win-updates.ps1",
      "scripts/software/ansible.ps1"
     ]
  }],
  "provisioners": [
    {
      "type": "powershell",
      "script": "scripts/software/vmware.ps1"
    },
    {
      "type": "powershell",
      "script": "scripts/smb.ps1"
    },
    {
      "type": "powershell",
      "script": "scripts/rdp.ps1"
    },
    {
      "type": "powershell",
      "script": "scripts/powerconfig.bat"
    },
    {
      "type": "powershell",
      "script": "scripts/cleanup.ps1"
    }
  ],
  "post-processors": [
      [
        {
          "type": "shell-local",
          "inline": [
            "ovftool --diskMode=thin --name=\"windows10ent-1709-{{isotime \"2006-01-02\"}}\" --annotation=\"{{isotime \"2006-01-02\"}}\" \"output/windows10ent-1709-{{isotime \"2006-01-02\"}}/windows10ent-1709-{{isotime \"2006-01-02\"}}.vmx\" \"output/windows10ent-1709-{{isotime \"2006-01-02\"}}.ova\""
          ]
        }
      ]
  ]
}
